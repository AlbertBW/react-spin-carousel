{
  "name": "react-spin-carousel",
  "private": false,
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -p tsconfig.app.json && vite build && npm run fix-types",
    "fix-types": "cp dist/components/index.d.ts dist/index.d.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "watch": "vitest"
  },
  "peerDependencies": {
    "react": ">=16.8.0 || ^19.0.0",
    "react-dom": ">=16.8.0 || ^19.0.0"
  },
  "devDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite-plugin-dts": "^4.5.0",
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vitest": "^3.0.1"
  },
  "description": "A react-spin-carousel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertBW/react-spin-carousel.git"
  },
  "keywords": [
    "react",
    "components"
  ],
  "author": "Albert Wales",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlbertBW/react-spin-carousel/issues"
  },
  "homepage": "https://github.com/AlbertBW/react-spin-carousel#readme",
  "main": "./dist/react-spin-carousel.umd.js",
  "module": "./dist/react-spin-carousel.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/react-spin-carousel.es.js",
      "require": "./dist/react-spin-carousel.umd.js",
      "default": "./dist/react-spin-carousel.es.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
